/* 基础样式 */
page {
  background: #f8f9fa;
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

/* 用户信息模块 */
.user-section {
  padding: 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.avatar-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2rpx solid #4a90e2;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.nickname-input {
  flex: 1;
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #333;
  min-height: 60rpx;
}

/* 地图容器 */
.map-wrapper {
  margin: 20rpx;
  height: 500rpx;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}

.map-controls {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 999;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

