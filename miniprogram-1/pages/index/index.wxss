  height: 80rpx;
  background: #fff url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACAAAAAgCAYAAABzenr0AAAACXBIWXMAAAsTAAALEwEAmpwYAAAAAXNSR0IArs4c6QAAAARnQU1BAACxjwv8YQUAAACHSURBVHgB7dZBCsAgDATQmaD3P+oFPKjYblbQCtb5QMCEl0XAIEnSJ5YrSx0j6hEwO0O8HduZP5oJkKQvGeB6t2UAAAD//+xdjB0T6C3ZAAAAAElFTkSuQmCC') no-repeat center;
  background-size: 60%;
  border-radius: 50%;
