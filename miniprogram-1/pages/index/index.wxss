.counter-badge {
  background: rgba(255,255,255,0.95);
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #4a90e2;
  border: 1rpx solid rgba(74,144,226,0.2);
}

/* 城市列表 */
.city-list {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
}

.list-header {
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.list-container {
  max-height: 55vh;
  padding: 0 24rpx;
}

.city-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  align-items: center;
}

.city-info {
  flex: 1;
}

.city-name {
  font-size: 30rpx;
  color: #333;
  display: block;
}

.city-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.city-count {
  font-size: 26rpx;
  color: #4a90e2;
  min-width: 120rpx;
  text-align: right;
}

.empty-tip {
  text-align: center;
  color: #ccc;
  padding: 40rpx 0;
  font-size: 26rpx;
}

.checkin-btn {
  margin: 24rpx;
  background: #4a90e2;
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
  line-height: 1.5;
}
